# ====================================
# SECURITY NOTICE
# ====================================
# This file contains sensitive configuration.
# Never commit your actual .env file to version control.
# Add .env to your .gitignore file.
# ====================================

# ====================
# Supabase Configuration
# ====================
VITE_SUPABASE_URL=your_supabase_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here
VITE_SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ====================
# API Keys (Server-side only)
# ====================
# These should be used in server-side code only
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# ====================
# Storage Configuration
# ====================
VITE_GOOGLE_DRIVE_LOGO_FOLDER=your_logo_folder_id
VITE_GOOGLE_DRIVE_PDF_FOLDER=your_pdf_folder_id
VITE_MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# ====================
# Security Settings
# ====================
VITE_SESSION_TIMEOUT=14400  # 4 hours in seconds
VITE_RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds
VITE_RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# ====================
# CORS Configuration
# ====================
VITE_API_BASE_URL=http://localhost:3001  # Your backend API URL
VITE_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173  # Add production domains

# ====================
# Feature Flags
# ====================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_LOGGING=false
VITE_ENABLE_MAINTENANCE_MODE=false

# ====================
# Logging Configuration
# ====================
VITE_LOG_LEVEL=info  # error, warn, info, debug
VITE_ENABLE_REQUEST_LOGGING=true
VITE_ENABLE_RESPONSE_LOGGING=true
